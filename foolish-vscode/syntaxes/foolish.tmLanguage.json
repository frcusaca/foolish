{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Foolish",
    "scopeName": "source.foolish",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.foolish",
                    "begin": "!!",
                    "end": "!!",
                    "patterns": []
                },
                {
                    "name": "comment.line.foolish",
                    "match": "!.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.foolish",
                    "match": "\\b(if|then|else|elif|fi)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic.foolish",
                    "match": "[+\\-*/]"
                },
                {
                    "name": "keyword.operator.assignment.foolish",
                    "match": "="
                },
                {
                    "name": "keyword.operator.search.foolish",
                    "match": "[.^$#/]|//"
                },
                {
                    "name": "keyword.operator.unknown.foolish",
                    "match": "\\?\\?\\?"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.foolish",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "strings": {
            "patterns": []
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.foolish",
                    "match": "[a-zA-Z_][a-zA-Z0-9_‚Å†]*"
                },
                {
                    "name": "entity.name.type.foolish",
                    "match": "'"
                }
            ]
        }
    }
}