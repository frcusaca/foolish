{
  "alwaysThinkingEnabled": false,
  "permissions": {
    "allow": [
      "Bash(mvn clean compile:*)",
      "Bash(mvn test:*)",
      "Bash(mvn clean install:*)",
      "Bash(mvn_cmd clean compile:*)",
      "Bash(mvn_cmd test:*)",
      "Bash(mvn_cmd clean install:*)",
      "Bash(cat:*)",
      "Bash(javac:*)",
      "Bash(java:*)",
      "Bash(ls:*)",
      "Bash(for f in *.received.foo)",
      "Bash(do base=\"$f%.received.foo\")",
      "Bash(if [ ! -f \"$base.approved.foo\" ])",
      "Bash(then echo \"Missing approval for: $base\")",
      "Bash(fi)",
      "Bash(done)",
      "Bash(find:*)",
      "Bash(then cp \"$f\" \"$base.approved.foo\")",
      "Bash(echo:*)",
      "Find(*)",
      "LS(*)",
      "Glob(*)",
      "Grep(*)",
      "WebFetch(domain:*)",
      "MultiEdit(*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/support/shared/claude/skills/ccw-maven-setup/prep_if_ccw.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {},
  "extraKnownMarketplaces": {
    "company-tools": {
      "source": {
        "source": "github",
        "repo": "company-org/claude-plugins"
      }
    },
    "security-plugins": {
      "source": {
        "source": "git",
        "url": "https://git.company.com/security/plugins.git"
      }
    }
  }

}
