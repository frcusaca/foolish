{
	!! Test for $ and ^ as postfix operators
	!! - "Backward Search from End": $ finds last value
	!! - "Forward Search from Beginning": ^ finds first value

	last_match = {alice=1; charlie=2; bob=3;}?e$;
	forward_match = {alice=1; charlie=2; bob=3;}/e$;

	first_match = {alice=1; adam=2; advent=3;}?^a.*;
	forward_match = {alice=1; adam=2; advent=3;}/^a.*;

	last_val = {x=1; y=2; z=3;}$;        !! Should be 3
	first_val = {a=10; b=20; c=30;}^;    !! Should be 10
	single_dollar = {value=42;}$;        !! Should be 42
	single_caret = {value=99;}^;         !! Should be 99
}
